<script>
  import AOS from 'aos';
  document.addEventListener('DOMContentLoaded', function () {
    AOS.init({
      duration: 1000,
      once: true,
    });
    const scrollDownBtn = document.getElementById('scroll-down-btn');

    // smooth "scroll down"
    if (scrollDownBtn) {
      scrollDownBtn.addEventListener('click', function (e) {
        e.preventDefault();

        const targetSection = document.querySelector('#about') as HTMLElement;

        if (targetSection) {
          const headerHeight = 80;
          const targetPosition = targetSection.offsetTop - headerHeight;
          const startPosition = window.pageYOffset;
          const distance = targetPosition - startPosition;
          const duration = 1500; // 1.5 секунды - медленнее
          let start: number | null = null;

          function animation(currentTime: number) {
            if (start === null) start = currentTime;
            const timeElapsed = currentTime - start;
            const run = ease(timeElapsed, startPosition, distance, duration);
            window.scrollTo(0, run);
            if (timeElapsed < duration) requestAnimationFrame(animation);
          }

          // Easing функция для плавности
          function ease(t: number, b: number, c: number, d: number) {
            t /= d / 2;
            if (t < 1) return (c / 2) * t * t + b;
            t--;
            return (-c / 2) * (t * (t - 2) - 1) + b;
          }

          requestAnimationFrame(animation);
        }
      });
    }

    // Плавная прокрутка для кнопок Contact me и See my works
    const heroButtons = document.querySelectorAll('section a[href^="#"]');

    heroButtons.forEach((button) => {
      button.addEventListener('click', function (e) {
        e.preventDefault();

        const targetId = (e.currentTarget as HTMLAnchorElement).getAttribute(
          'href'
        );
        const targetSection = document.querySelector(
          targetId || ''
        ) as HTMLElement;

        if (targetSection) {
          const headerHeight = 80;
          const targetPosition = targetSection.offsetTop - headerHeight;

          // Убираем фокус с кнопки
          (e.currentTarget as HTMLAnchorElement).blur();

          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth',
          });
        }
      });
    });
  });
</script>
