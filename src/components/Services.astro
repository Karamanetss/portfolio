---
// Services component
const services = [
  {
    title: 'Mobile Apps design',
    icon: `<rect x="3" y="4" width="18" height="14" rx="2" stroke="currentColor" stroke-width="2"/>
           <rect x="7" y="8" width="2" height="6" fill="currentColor"/>
           <rect x="11" y="10" width="2" height="4" fill="currentColor"/>
           <rect x="15" y="6" width="2" height="8" fill="currentColor"/>`,
  },
  {
    title: 'UI/UX design',
    icon: `<rect x="2" y="3" width="20" height="14" rx="2" stroke="currentColor" stroke-width="2"/>
           <line x1="8" y1="21" x2="16" y2="21" stroke="currentColor" stroke-width="2"/>
           <line x1="12" y1="17" x2="12" y2="21" stroke="currentColor" stroke-width="2"/>`,
  },
  {
    title: 'Website design',
    icon: `<circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
           <polygon points="10,8 16,12 10,16" fill="currentColor"/>`,
  },
  {
    title: 'Webflow development',
    icon: `<rect x="3" y="3" width="7" height="7" stroke="currentColor" stroke-width="2"/>
           <rect x="14" y="3" width="7" height="7" stroke="currentColor" stroke-width="2"/>
           <rect x="14" y="14" width="7" height="7" stroke="currentColor" stroke-width="2"/>
           <rect x="3" y="14" width="7" height="7" stroke="currentColor" stroke-width="2"/>`,
  },
  {
    title: 'Brand identity',
    icon: `<path d="M12 2L2 7v10c0 5.55 3.84 9.74 9 11 5.16-1.26 9-5.45 9-11V7l-10-5z" stroke="currentColor" stroke-width="2" fill="none"/>
           <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" fill="none"/>`,
  },
  {
    title: 'Interaction design',
    icon: `<path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z" stroke="currentColor" stroke-width="2" fill="none"/>
           <polyline points="7.5,4.21 12,6.81 16.5,4.21" stroke="currentColor" stroke-width="2"/>
           <polyline points="7.5,19.79 7.5,14.6 3,12" stroke="currentColor" stroke-width="2"/>
           <polyline points="21,12 16.5,14.6 16.5,19.79" stroke="currentColor" stroke-width="2"/>
           <polyline points="12,22.81 12,17" stroke="currentColor" stroke-width="2"/>`,
  },
];

const cardBaseClasses =
  'bg-white/8 border border-white/15 rounded-2xl p-6 h-44 flex flex-col justify-between transition-all duration-300 ease-out hover:bg-white hover:border-white group-hover:transform group-hover:-translate-y-1 group-hover:shadow-xl will-change-transform';
const iconClasses =
  'w-10 h-10 text-white group-hover:text-black transition-colors duration-300';
const arrowClasses =
  'text-xl text-white/40 group-hover:text-black/60 transition-all duration-300 group-hover:transform group-hover:translate-x-1';
const titleClasses =
  'text-lg font-semibold text-white group-hover:text-black transition-colors duration-300';
---

<style>
  .service-card {
    transform: translateZ(0);
    backface-visibility: hidden;
  }

  .service-card svg {
    will-change: auto;
  }
</style>

<link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css" />
<section id="services" class="py-20 bg-black text-white">
  <div class="w-full max-w-[1280px] mx-auto px-6">
    <div class="mb-16" data-aos="fade-up">
      <p
        class="text-3xl md:text-[36px] font-light text-gray-400 text-center lg:text-left mb-3"
      >
        What I am Expert In
      </p>
      <h3
        class="font-montserrat text-4xl sm:text-5xl lg:text-6xl xl:text-[90px] font-bold mb-3 sm:mb-5 text-center lg:text-left text-white"
      >
        My Services
      </h3>
    </div>

    <div class="flex flex-col lg:flex-row gap-6">
      <!-- Services Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 flex-1" data-aos="fade-up">
        {
          services.map((service, idx) => (
            <div class="group cursor-pointer service-card" data-aos="fade-up" data-aos-delay={100 + idx * 100}>
              <div class={cardBaseClasses}>
                <div class="flex justify-between items-start">
                  <div class={iconClasses}>
                    <svg
                      width="40"
                      height="40"
                      viewBox="0 0 24 24"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <Fragment set:html={service.icon} />
                    </svg>
                  </div>
                  <div class={arrowClasses}>→</div>
                </div>
                <h3 class={titleClasses}>{service.title}</h3>
              </div>
            </div>
          ))
        }
      </div>

      <!-- Contact Card -->
      <div class="group cursor-pointer lg:w-80 order-last lg:order-none" data-aos="zoom-in">
        <div
          class="bg-white/8 border border-white/15 rounded-2xl p-6 h-44 lg:h-full flex flex-col justify-between transition-all duration-300 ease-out hover:bg-white hover:border-white group-hover:transform group-hover:-translate-y-1 group-hover:shadow-xl"
        >
          <div class="flex justify-end">
            <div
              class="text-2xl text-white group-hover:text-black transition-all duration-300 group-hover:transform group-hover:translate-x-1"
            >
              ↗
            </div>
          </div>
          <div>
            <p
              class="text-sm text-white/60 group-hover:text-black/70 mb-2 font-medium tracking-wider transition-colors duration-300"
            >
              Contact me
            </p>
            <h3
              class="text-lg font-semibold text-white group-hover:text-black transition-colors duration-300"
            >
              karamanets.bogdan@gmail.com
            </h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import AOS from 'aos';
  document.addEventListener('DOMContentLoaded', function () {
    AOS.init({
      duration: 1000,
      once: true,
    });
  });
</script>
