---
const whyMeItems = [
  {
    title: 'Tailored solutions',
    description:
      'I go beyond the code to understand the uniqueness of your project and deliver exactly what you need.',
    image: '/Family.svg',
  },
  {
    title: 'Speed and efficiency',
    description:
      'I deliver high-quality results on time — without unnecessary delays or compromises.',
    image: '/Speed.svg',
  },
  {
    title: 'Pixel-perfect & responsive',
    description:
      'Websites I build look great and work smoothly on any screen or device.',
    image: '/PixelPerfect.svg',
  },
  {
    title: 'Easy to work with',
    description:
      'Open to feedback, clear in communication, and focused on results — no drama, just good work.',
    image: '/EasyToWork.svg',
  },
];
---

<style>
  .glass-effect {
    transform: translateZ(0);
    backface-visibility: hidden;
    perspective: 1000px;
  }

  .glass-blur {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  @media (max-width: 768px) {
    .glass-blur {
      backdrop-filter: blur(4px);
      -webkit-backdrop-filter: blur(4px);
    }
  }
</style>

<section class="relative bg-black py-10 lg:py-20 overflow-hidden" id="about">
  <div class="max-w-7xl mx-auto px-6">
    <!-- About Section -->
    <div
      class="flex flex-col lg:flex-row items-start bg-white rounded-3xl lg:rounded-[155px] w-full min-h-[400px] lg:h-[556px] mb-20 overflow-hidden"
      data-aos="fade-up"
      data-aos-delay="100"
    >
      <div
        class="flex-1 lg:flex-[2] px-6 sm:px-8 lg:px-[60px] flex flex-col justify-start pt-8 sm:pt-12 lg:pt-[80px] pb-8 lg:pb-0"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        <h2
          class="font-montserrat text-4xl sm:text-5xl lg:text-6xl xl:text-[90px] font-bold text-black mb-3 sm:mb-5 text-center lg:text-left"
        >
          About Me
        </h2>
        <div
          class="text-lg sm:text-xl lg:text-2xl mb-3 sm:mb-4 text-center lg:text-left"
        >
          Based in Germany
        </div>
        <p
          class="text-base sm:text-lg lg:text-xl font-light max-w-full lg:max-w-[630px] text-center lg:text-left"
        >
          I'm Bohdan, a web developer based in Germany, focused on building
          modern, fast, and visually striking websites. I help personal brands
          and businesses stand out online with clean code, smart layouts, and
          bold design. Whether it's a landing page or a custom solution — I turn
          ideas into smooth digital experiences.
        </p>
      </div>
      <div
        class="w-full lg:w-[443px] bg-black flex items-center lg:justify-start justify-center lg:pl-15 rounded-3xl lg:rounded-[155px] min-h-[300px] lg:h-[443px] relative lg:translate-x-20 lg:self-center shadow-2xl"
      >
        <div
          class="text-white text-center space-y-4 lg:space-y-6 px-6 py-8 lg:px-0 lg:py-0"
        >
          <div
            class="relative p-[1px] bg-gradient-to-b from-white/20 via-white/5 to-white/1 rounded-full"
          >
            <div
              class="bg-black rounded-full px-4 py-2 lg:px-5 lg:py-3 text-sm lg:text-base"
            >
              +49 1622762734
            </div>
          </div>
          <div
            class="relative p-[1px] bg-gradient-to-b from-white/20 via-white/5 to-white/1 rounded-full"
          >
            <div
              class="bg-black rounded-full px-4 py-2 lg:px-5 lg:py-3 text-sm lg:text-base"
            >
              karamanets.bogdan@gmail.com
            </div>
          </div>
          <div
            class="relative p-[1px] bg-gradient-to-b from-white/20 via-white/5 to-white/1 rounded-full"
          >
            <div
              class="bg-black rounded-full px-4 py-2 lg:px-5 lg:py-3 text-sm lg:text-base"
            >
              German, English, Russian
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Why Me Section -->
    <div class="space-y-8 md:space-y-12">
      <div
        class="flex flex-col sm:flex-row items-center sm:items-center gap-4 sm:gap-6"
        data-aos="fade-up"
      >
        <div class="w-8 h-8 sm:w-10 sm:h-10 bg-gray-400 rounded-full"></div>
        <h2
          class="font-montserrat text-4xl sm:text-6xl md:text-[90px] font-bold text-white uppercase text-center sm:text-left"
        >
          Why Me?
        </h2>
      </div>

      <div class="space-y-4 md:space-y-6">
        {
          whyMeItems.map((item, idx) => (
            <div
              class="flex flex-col lg:flex-row items-center text-white gap-4 md:gap-6"
              data-aos="fade-up"
              data-aos-delay={200 + idx * 100}
            >
              <div class="relative p-[1px] bg-gradient-to-b from-white/20 via-white/10 to-white/5 rounded-2xl w-full lg:flex-1 lg:max-w-[690px] transition-transform duration-300 hover:scale-105 hover:shadow-2xl">
                <div class="bg-black/75 backdrop-blur-sm rounded-2xl px-4 py-4 md:px-6 md:py-6 border border-white/15 will-change-transform">
                  <h3 class="text-xl sm:text-2xl lg:text-[32px] font-montserrat font-semibold mb-2 text-center lg:text-left">
                    {item.title}
                  </h3>
                  <p class="text-gray-300 font-light text-lg sm:text-xl text-center lg:text-left">
                    {item.description}
                  </p>
                </div>
              </div>
              <div class="flex-shrink-0 flex justify-center">
                <img
                  src={item.image}
                  alt={item.title}
                  class="w-12 h-12 sm:w-16 sm:h-16 lg:w-[74px] lg:h-[74px]"
                  loading="eager"
                />
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  import AOS from 'aos';
  document.addEventListener('DOMContentLoaded', function () {
    AOS.init({
      duration: 1000,
      once: true,
    });
  });
</script>
