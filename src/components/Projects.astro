---
const projects = [
  {
    id: 1,
    title: 'Weather App',
    description: 'ClimaCast Weather App Design',
    image: '/weather-app.jpg',
  },
  {
    id: 2,
    title: 'Trimsy Salon App',
    description: 'To Start a Hair Salon App: Detailed Guide',
    image: '/salon-app.jpg',
  },
  {
    id: 3,
    title: 'E-commerce App',
    description: 'Modern shopping experience',
    image: '/ecommerce-app.jpg',
  },
  {
    id: 4,
    title: 'Banking App',
    description: 'Secure financial management',
    image: '/banking-app.jpg',
  },
];
---

<section class="py-10 lg:py-20 bg-white" id="projects">
  <div class="max-w-7xl mx-auto px-5">
    <div class="mb-16" data-aos="fade-up">
      <h2
        class="text-[36px] font-light text-black text-center lg:text-left mb-2"
      >
        Portfolio
      </h2>
      <h3
        class="font-montserrat text-4xl sm:text-5xl lg:text-6xl xl:text-[90px] font-bold text-black mb-3 sm:mb-5 text-center lg:text-left"
      >
        My recent work
      </h3>
    </div>

    <div id="my-keen-slider" class="keen-slider" data-aos="fade-left">
      {
        projects.map((project) => (
          <div class="keen-slider__slide">
            <div class="project-card">
              <div class="project-image">
                <img src={project.image} alt={project.title} />
              </div>
              <div class="project-content">
                <h4>{project.title}</h4>
                <p>{project.description}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .keen-slider {
    display: flex;
    overflow: hidden;
    cursor: grab;
  }

  .keen-slider:active {
    cursor: grabbing;
  }

  .keen-slider__slide {
    min-width: auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-card {
    border: 1px solid #eaeaea;
    width: 535px;
    height: 364px;
    background: white;
    border-radius: 20px;
    overflow: hidden;
  }

  .project-image {
    width: 100%;
    height: 240px;
    background: linear-gradient(135deg, #bd6602 0%, #000000 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-content {
    padding: 32px;
  }

  .project-content h4 {
    font-size: 24px;
    font-weight: 700;
    color: black;
    margin: 0 0 12px 0;
  }

  .project-content p {
    font-size: 16px;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }
</style>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/keen-slider@6.8.5/keen-slider.min.css"
/>
<script src="https://cdn.jsdelivr.net/npm/keen-slider@6.8.5/keen-slider.min.js"
></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // @ts-ignore
    var slider = new KeenSlider('#my-keen-slider', {
      loop: true,
      mode: 'free',
      slides: {
        perView: 2.5,
        spacing: 23,
      },
    });
  });
</script>
