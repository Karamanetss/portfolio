---
import Layout from '../layouts/Layout.astro';

import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Projects from '../components/Projects.astro';
import Services from '../components/Services.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
import Pricing from '../components/Pricing.astro';
import Testimonials from '../components/Testimonials.astro';
---

<Layout
  title="Bohdan Karamanets | Web Developer Portfolio"
  description="Portfolio of Bohdan Karamanets, web developer. Modern, fast, and visually striking websites for personal brands and businesses."
  image="/avatar.png"
  url="https://your-domain.com/"
  navLabels={{
    about: 'About',
    projects: 'Projects',
    services: 'Services',
    contact: 'Contact',
  }}
>
  <Hero
    title="Hi, I'm Bohdan!"
    subtitle="A web developer"
    description="I specialize in building fast, accessible, and scalable web applications."
    contactBtnText="Contact me"
    worksBtnText="See my works"
    scrollDownText="scroll down"
  />
  <About
    title="About Me"
    location="Based in Germany"
    description="I'm Bohdan, a web developer based in Germany, focused on building modern, fast, and visually striking websites. I help personal brands and businesses stand out online with clean code, smart layouts, and bold design. Whether it's a landing page or a custom solution, I turn ideas into smooth digital experiences."
    whyMeItems={[
      {
        title: 'Tailored solutions',
        description:
          'I go beyond the code to understand the uniqueness of your project and deliver exactly what you need.',
        image: '/Family.svg',
      },
      {
        title: 'Speed and efficiency',
        description:
          'I deliver high-quality results on time — without unnecessary delays or compromises.',
        image: '/Speed.svg',
      },
      {
        title: 'Pixel-perfect & responsive',
        description:
          'Websites I build look great and work smoothly on any screen or device.',
        image: '/PixelPerfect.svg',
      },
      {
        title: 'Easy to work with',
        description:
          'Open to feedback, clear in communication, and focused on results — no drama, just good work.',
        image: '/EasyToWork.svg',
      },
    ]}
    whyMeTitle="Why Me?"
  />
  <Projects
    title="Portfolio"
    subtitle="My recent work"
    projects={[
      {
        id: 1,
        title: 'Glasses of Cocktail',
        image: '/weather-app.jpg',
        tags: ['BRANDING'],
        featured: true,
      },
      {
        id: 2,
        title: 'Hilfiger Echidna',
        image: '/ecommerce-app.jpg',
        tags: ['VIDEO'],
        featured: true,
      },
      {
        id: 3,
        title: 'Branding with Flowers',
        image: '/salon-app.jpg',
        tags: ['BRANDING'],
        featured: false,
      },
      {
        id: 4,
        title: 'Mockup Bottle',
        image: '/banking-app.jpg',
        tags: ['MOCKUP'],
        featured: false,
      },
      {
        id: 5,
        title: 'Mockup Bottle',
        image: '/banking-app.jpg',
        tags: ['MOCKUP'],
        featured: false,
      },
    ]}
  />
  <Services
    title="My Services"
    subtitle="What I am Expert In"
    contactLabel="Contact me"
    services={[
      {
        title: 'Landing Page Development',
        icon: `<rect x="3" y="4" width="18" height="14" rx="2" stroke="currentColor" stroke-width="2"/>
               <rect x="7" y="8" width="2" height="6" fill="currentColor"/>
