---
import Hero from '../../components/Hero.astro';
import About from '../../components/About.astro';
import Projects from '../../components/Projects.astro';
import Services from '../../components/Services.astro';
import Testimonials from '../../components/Testimonials.astro';
import Pricing from '../../components/Pricing.astro';
import Contact from '../../components/Contact.astro';
import Footer from '../../components/Footer.astro';
import Layout from '../../layouts/Layout.astro';
---

<Layout
  title="Bohdan Karamanets | Web Developer Portfolio"
  description="Portfolio of Bohdan Karamanets, web developer. Modern, fast, and visually striking websites for personal brands and businesses."
  image="/avatar.png"
  url="https://your-domain.com/"
  navLabels={{
    about: 'Über mich',
    projects: 'Projekte',
    services: 'Dienstleistungen',
    contact: 'Kontakt',
  }}
>
  <Hero
    title="Hallo, ich bin Bohdan!"
    subtitle="Ein Webentwickler"
    description="Ich spezialisiere mich auf schnelle, zugängliche und skalierbare Webanwendungen."
    contactBtnText="Kontakt"
    worksBtnText="Mein Portfolio"
    scrollDownText="runterscrollen"
  />
  <About
    title="Über mich"
    location="In Deutschland"
    description="Ich bin Bohdan, Webentwickler aus Deutschland, spezialisiert auf moderne, schnelle und visuell auffällige Websites. Ich helfe Marken und Unternehmen, sich online abzuheben mit sauberem Code, smarten Layouts und mutigem Design. Egal ob Landingpage oder individuelle Lösung, ich verwandle Ideen in reibungslose digitale Erlebnisse."
    whyMeTitle="Warum ich?"
    whyMeItems={[
      {
        title: 'Individuelle Lösungen',
        description:
          'Ich gehe über den Code hinaus, um die Einzigartigkeit Ihres Projekts zu verstehen und liefere genau das, was Sie brauchen.',
        image: '/Family.svg',
      },
      {
        title: 'Schnelligkeit & Effizienz',
        description:
          'Ich liefere hochwertige Ergebnisse pünktlich – ohne unnötige Verzögerungen oder Kompromisse.',
        image: '/Speed.svg',
      },
      {
        title: 'Pixelgenau & responsiv',
        description:
          'Die von mir entwickelten Websites sehen auf jedem Gerät großartig aus und funktionieren reibungslos.',
        image: '/PixelPerfect.svg',
      },
      {
        title: 'Angenehme Zusammenarbeit',
        description:
          'Offen für Feedback, klare Kommunikation und Fokus auf Ergebnisse – kein Drama, nur gute Arbeit.',
        image: '/EasyToWork.svg',
      },
    ]}
  />
  <Projects
    title="Portfolio"
    subtitle="Meine aktuellen Arbeiten"
    projects={[
      {
        id: 1,
        title: 'Gläser mit Cocktail',
        image: '/weather-app.jpg',
        tags: ['BRANDING'],
        featured: true,
      },
      {
        id: 2,
        title: 'Hilfiger Echidna',
        image: '/ecommerce-app.jpg',
        tags: ['VIDEO'],
        featured: true,
      },
      {
        id: 3,
        title: 'Branding mit Blumen',
        image: '/salon-app.jpg',
        tags: ['BRANDING'],
        featured: false,
      },
      {
        id: 4,
        title: 'Mockup Flasche',
        image: '/banking-app.jpg',
        tags: ['MOCKUP'],
        featured: false,
      },
      {
        id: 5,
        title: 'Mockup Flasche',
        image: '/banking-app.jpg',
        tags: ['MOCKUP'],
        featured: false,
      },
    ]}
  />
  <Services
    title="Meine Dienstleistungen"
    subtitle="Worin ich Experte bin"
    contactLabel="Kontakt aufnehmen"
    services={[
      {
        title: 'Landingpage-Entwicklung',
        icon: `<rect x="3" y="4" width="18" height="14" rx="2" stroke="currentColor" stroke-width="2"/>
               <rect x="7" y="8" width="2" height="6" fill="currentColor"/>
               <rect x="11" y="10" width="2" height="4" fill="currentColor"/>
               <rect x="15" y="6" width="2" height="8" fill="currentColor"/>`,
      },
      {
        title: 'UI/UX & Webdesign',
        icon: `<rect x="2" y="3" width="20" height="14" rx="2" stroke="currentColor" stroke-width="2"/>
               <line x1="8" y1="21" x2="16" y2="21" stroke="currentColor" stroke-width="2"/>
               <line x1="12" y1="17" x2="12" y2="21" stroke="currentColor" stroke-width="2"/>`,
      },
      {
        title: 'Unternehmenswebsite',
        icon: `<circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
               <polygon points="10,8 16,12 10,16" fill="currentColor"/>`,
      },
